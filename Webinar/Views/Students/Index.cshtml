@model IEnumerable<Webinar.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-warning glyphicon glyphicon-pencil" }) 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Document)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Document)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Student_ID}, new { @class = "btn btn-warning glyphicon glyphicon-pencil" }) |
        @Html.ActionLink("Detalle", "Details", new { id = item.Student_ID }, new { @class = "btn btn-info glyphicon glyphicon-align-justify" }) |
        @Html.ActionLink("Quitar", "Delete", new { id = item.Student_ID }, new { @class = "btn btn-danger glyphicon glyphicon-trash", onclick = "return confirm('Esta seguro de Quitar este campeonato?');" })

        </td>
    </tr>
}

</table>
